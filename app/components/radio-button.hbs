{{!-- template-lint-disable no-positive-tabindex --}}
{{!-- template-lint-disable no-autofocus-attribute --}}
{{#if (has-block)}}
  <label class="ember-radio-button
    {{if this.checked this.checkedClass}}
    {{this.joinedClassNames}}"
    for={{@radioId}}
  >
    <RadioButtonInput
      class={{@radioClass}}
      id={{@radioId}}
      autofocus={{@autofocus}}
      disabled={{@disabled}}
      name={{@name}}
      required={{@required}}
      tabindex={{@tabindex}}
      aria-labelledby={{@ariaLabelledby}}
      aria-describedby={{@ariaDescribedby}}
      @groupValue={{@groupValue}}
      @checked={{this.checked}}
      @value={{@value}}
      @changed={{this.changed}}
    />
    {{yield}}
  </label>
{{else}}
  <RadioButtonInput
    class={{@radioClass}}
    id={{@radioId}}
    autofocus={{@autofocus}}
    disabled={{@disabled}}
    name={{@name}}
    required={{@required}}
    tabindex={{@tabindex}}
    aria-labelledby={{@ariaLabelledby}}
    aria-describedby={{@ariaDescribedby}}
    @groupValue={{@groupValue}}
    @checked={{this.checked}}
    @value={{@value}}
    @changed={{this.changed}}
  />
{{/if}}
